<?xml version="1.0"?>
<config>
    <modules>
        <Balticode_Cashondelivery>
            <version>0.1.0</version>
        </Balticode_Cashondelivery>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote>
                <cod_fee>
                    <to_order>*</to_order>
                </cod_fee>
                <base_cod_fee>
                    <to_order>*</to_order>
                </base_cod_fee>
                <cod_tax_amount>
                    <to_order>*</to_order>
                </cod_tax_amount>
                <base_cod_tax_amount>
                    <to_order>*</to_order>
                </base_cod_tax_amount>
            </sales_convert_quote>
        </fieldsets>
        <blocks>
            <Balticode_Cashondelivery>
                <class>Balticode_Cashondelivery_Block</class>
            </Balticode_Cashondelivery>
        </blocks>
        <helpers>
            <Balticode_Cashondelivery>
                <class>Balticode_Cashondelivery_Helper</class>
            </Balticode_Cashondelivery>
        </helpers>
        <models>
            <Balticode_Cashondelivery>
                <class>Balticode_Cashondelivery_Model</class>
            </Balticode_Cashondelivery>
        </models>
        <resources>
            <cashondelivery_setup>
                <setup>
                    <module>Balticode_Cashondelivery</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cashondelivery_setup>
        </resources>
        <events>
            <sales_quote_collect_totals_after>
                <observers>
                    <Balticode_Cashondelivery>
                        <type>singleton</type>
                        <class>Balticode_Cashondelivery/observer</class>
                        <method>sales_quote_collect_totals_after</method>
                    </Balticode_Cashondelivery>
                </observers>
            </sales_quote_collect_totals_after>
            <order_cancel_after>
                <observers>
                    <Balticode_Cashondelivery>
                        <type>singleton</type>
                        <class>Balticode_Cashondelivery/observer</class>
                        <method>order_cancel_after</method>
                    </Balticode_Cashondelivery>
                </observers>
            </order_cancel_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <Balticode_Cashondelivery>
                        <class>Balticode_Cashondelivery/sales_quote_total</class>
                        <after>subtotal,discount,shipping</after>
                        <before>tax,grand_total</before>
                        <renderer>Balticode_Cashondelivery/checkout_cod</renderer>
                        <admin_renderer>Balticode_Cashondelivery/adminhtml_sales_order_create_totals_cod</admin_renderer>
                    </Balticode_Cashondelivery>
                    <Balticode_Cashondelivery_tax>
                        <class>Balticode_Cashondelivery/sales_quote_taxTotal</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </Balticode_Cashondelivery_tax>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <Balticode_Cashondelivery>
                        <class>Balticode_Cashondelivery/sales_invoice_total</class>
                        <after>subtotal,discount,shipping</after>
                        <before>tax,grand_total</before>
                    </Balticode_Cashondelivery>
                    <Balticode_Cashondelivery_tax>
                        <class>Balticode_Cashondelivery/sales_invoice_tax</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </Balticode_Cashondelivery_tax>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <Balticode_Cashondelivery>
                        <class>Balticode_Cashondelivery/sales_creditmemo_total</class>
                        <after>subtotal,discount,shipping</after>
                        <before>tax,grand_total</before>
                    </Balticode_Cashondelivery>
                    <Balticode_Cashondelivery_tax>
                        <class>Balticode_Cashondelivery/sales_creditmemo_tax</class>
                        <after>subtotal,discount,shipping,tax</after>
                        <before>grand_total</before>
                    </Balticode_Cashondelivery_tax>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <Balticode_Cashondelivery translate="title">
                    <title>Cash on Delivery fee</title>
                    <source_field>cod_fee</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>450</sort_order>
                    <model>Balticode_Cashondelivery/sales_pdf_cod</model>
                </Balticode_Cashondelivery>
            </totals>
        </pdf>
    </global>
    <default>
        <sales>
            <totals_sort>
                <Balticode_cashondelivery>35</Balticode_cashondelivery>
            </totals_sort>
        </sales>
        <payment>
            <Balticode_Cashondelivery>
                <active>0</active>
                <model>Balticode_Cashondelivery/cashondelivery</model>
                <order_status>1</order_status>
                <title>Cash on Delivery</title>
                <allowspecific>0</allowspecific>
                <shippingallowspecific>0</shippingallowspecific>
                <disallowspecificshippingmethods>1</disallowspecificshippingmethods>
                <disallowedshippingmethods>dpd_ps</disallowedshippingmethods>
                <cost_calc_base>subtotal</cost_calc_base>
                <display_zero_fee>0</display_zero_fee>
            </Balticode_Cashondelivery>
        </payment>
        <sales>
            <totals_sort>
                <Balticode_cashondelivery>15</Balticode_cashondelivery>
                <Balticode_cashondelivery_tax>97</Balticode_cashondelivery_tax>
            </totals_sort>
        </sales>
        <tax>
            <classes>
                <Balticode_cashondelivery_tax_class>0</Balticode_cashondelivery_tax_class>
            </classes>
            <calculation>
                <Balticode_cashondelivery_includes_tax>0</Balticode_cashondelivery_includes_tax>
            </calculation>
            <display>
                <Balticode_cashondelivery_fee>1</Balticode_cashondelivery_fee>
            </display>
        </tax>
    </default>
    <adminhtml>
        <layout>
            <updates>
                <balticode_cashondelivery>
                    <file>balticode/cashondelivery.xml</file>
                </balticode_cashondelivery>
            </updates>
        </layout>
        <translate>
            <modules>
                <Balticode_Cashondelivery>
                    <files>
                        <default>Balticode_Cashondelivery.csv</default>
                    </files>
                </Balticode_Cashondelivery>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch>
                <observers>
                    <Balticode_Cashondelivery>
                        <type>singleton</type>
                        <class>Balticode_Cashondelivery/observer</class>
                        <method>preDispatch</method>
                    </Balticode_Cashondelivery>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <Balticode_cashondelivery>
                    <file>balticode/cashondelivery.xml</file>
                </Balticode_cashondelivery>
            </updates>
        </layout>
        <translate>
            <modules>
                <Balticode_Cashondelivery>
                    <files>
                        <default>Balticode_Cashondelivery.csv</default>
                    </files>
                </Balticode_Cashondelivery>
            </modules>
        </translate>
    </frontend>
</config>